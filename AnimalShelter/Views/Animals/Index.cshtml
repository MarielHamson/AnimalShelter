@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model IEnumerable<AnimalShelter.Models.Animal>;

<h1>Animals</h1>

@if (Model.Count() == 0)
{
  <h3>No animals have been added yet!</h3>
}

@foreach (Animal animal in Model)
{
  <li>@Html.ActionLink($"{animal.Name}", "Details", new {id = animal.AnimalId})</li>
}

<h3>@Html.ActionLink("Add new animal", "Create")</h3>
<h3>@Html.ActionLink("Home", "Index", "Home")</h3>

